FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue T 428
);

regions
(
    sphereToCell
    {
        centre (0.0774 0.0774 0.000774);
        radius   9.675e-3;
        fieldValues
        (
            volScalarFieldValue T  2000
        );
    }
);


